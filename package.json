{
  "name": "create-nodejs-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "env:symlink": "ln -sf .env.example .env",
    "start": "npm run env:symlink && nodemon index.js",
    "start:database": "docker-compose up -d database",
    "start:production": "node index.js",
    "start:with-database": "npm run start:database && MONGODB_HOST=0.0.0.0 npm start",
    "test": "npm run test:unit && npm run test:functional",
    "test:functional:ci": "ava **/functional/**/*.js --verbose",
    "test:functional:local": "npm run start:database && MONGODB_HOST=0.0.0.0 MONGODB_DATABASE_NAME=db-test ava **/functional/**/*.js --verbose --serial",
    "test:unit": "ava **/unit/**/*.js --verbose",
    "test:create-docs": "CREATE_DOCS=true npm run test:functional:local"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "ava": "^1.4.1",
    "detect-port": "^1.3.0",
    "dotenv": "^8.0.0",
    "got": "^9.6.0",
    "nodemon": "^1.19.0",
    "the-owl": "1.0.7"
  },
  "dependencies": {
    "async-retry": "^1.2.3",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dayjs": "^1.8.14",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "mongoose": "^5.5.6",
    "morgan": "^1.9.1",
    "validator": "^10.11.0"
  }
}
